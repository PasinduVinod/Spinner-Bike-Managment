<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/cham1"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametext"
            android:text="Brand"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cham1"
            android:layout_marginLeft="10dp"

                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametext2"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cham1"
            android:layout_below="@+id/nametext"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametext3"
            android:text="Origin"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cham1"
            android:layout_below="@+id/nametext2"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/textLease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Date"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cham1"
            android:layout_below="@+id/nametext3"
            android:layout_marginLeft="10dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Cycler Opinion"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Remove Bicycle"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"/>




        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>